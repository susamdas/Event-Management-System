<!DOCTYPE html>
<html>
<head>
    <title>Quick Event Solution</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        header {
            background-color: green;
            color: white;
            padding: 15px;
        }

        footer {
            background-color: yellow;
            color: black;
            padding: 10px;
            text-align: center;
            margin-top: auto; 
        }

        .content {
            flex: 1; 
            padding: 20px;
        }

        nav a {
            margin: 0 10px;
            color: white;
            text-decoration: none;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <h1>Quick Event Solution Ltd.</h1>
        <nav>
            <a href="@Url.Action("Index", "Home")">Home</a>
            <a href="@Url.Action("AllEvents", "Home")">All Events</a>
            <a href="@Url.Action("UpcomingEvents", "Home")">Upcoming Events</a>
            <a href="@Url.Action("UsersPage", "Home")">Users</a>
        </nav>
    </header>

    <div class="content">
        @RenderBody()
    </div>

    <footer>
        This Application is Designed By Susam Krishna Das
    </footer>
</body>
</html>
